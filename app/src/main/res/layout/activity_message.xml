<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2979CD"
    tools:context=".MessageActivity">



    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#2979CD"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_ic"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/load_img_anim"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="centerCrop"
            app:lottie_rawRes="@raw/load_img_anim"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/it_user_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@id/load_img_anim"
            app:layout_constraintLeft_toLeftOf="@id/load_img_anim"
            app:layout_constraintRight_toRightOf="@id/load_img_anim"
            app:layout_constraintBottom_toBottomOf="@id/load_img_anim"
            android:scaleType="centerCrop"
            android:src="@drawable/user_img"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical">
            <TextView
                android:id="@+id/it_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Depp"
                android:textColor="@color/white"
                android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/it_user_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last seen 12:23"
                android:textColor="@color/white"/>
                    <ImageView
                        android:id="@+id/online"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/online"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"/>
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_weight="0.3"
            android:src="@drawable/call_ic"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/videocall_ic"
            android:layout_weight="0.3"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:background="@drawable/shape3"
        tools:listitem="@layout/item_from"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintTop_toBottomOf="@id/line_top"
        tools:ignore="RtlSymmetry" >
    </androidx.recyclerview.widget.RecyclerView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/big_user_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/recycle"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText
            android:id="@+id/edt_sms"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/custom_input"
            android:layout_weight="9"
            android:paddingStart="10dp"
            android:hint="Say hi!..."
            tools:ignore="RtlSymmetry" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/send_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="#DDD9D9"
            android:scaleType="center"
            app:lottie_rawRes="@raw/send_anim"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sent_anim"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toTopOf="@id/line1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        app:lottie_rawRes="@raw/sended_anim"
        android:visibility="gone"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>